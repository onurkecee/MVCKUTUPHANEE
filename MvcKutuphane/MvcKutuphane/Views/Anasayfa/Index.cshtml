
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<!doctype html>
<html class="no-js" lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ThemeKit - Admin Template</title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" href="favicon.ico" type="~/webadmin/image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/webadmin/plugins/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/icon-kit/dist/css/iconkit.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/ionicons/dist/css/ionicons.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/webadmin/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/webadmin/plugins/tempusdominus-bootstrap-4/build/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/weather-icons/css/weather-icons.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/c3/c3.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/owl.carousel/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/webadmin/plugins/owl.carousel/dist/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/webadmin/dist/css/theme.min.css">
    <script src="~/webadmin/src/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="card-group mb-4" style="margin-top:15px;">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="state">
                        <h3 class="text-success">@ViewBag.uyesayisi</h3>
                        <p class="card-subtitle text-muted fw-500">Toplam Üye Sayısı</p>
                    </div>
                    <div class="icon"><i class="ik ik-user"></i></div>
                </div>
                <div class="progress mt-3 mb-1" style="height: 6px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>

            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="state">
                        <h3 class="text-primary">@ViewBag.personelsayisi</h3>
                        <p class="card-subtitle text-muted fw-500">Toplam Personel Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ik ik-check-circle"></i>
                    </div>
                </div>
                <div class="progress mt-3 mb-1" style="height: 6px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="state">
                        <h3 class="text-danger">@ViewBag.kitapsayisi</h3>
                        <p class="card-subtitle text-muted fw-500">Toplam Kitap Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ik ik-codepen"></i>
                    </div>
                </div>
                <div class="progress mt-3 mb-1" style="height: 6px;">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="state">
                        <h3 class="text-info">@ViewBag.emanetkitapsayisi</h3>
                        <p class="card-subtitle text-muted fw-500">Emanet Kitaplar</p>
                    </div>
                    <div class="icon">
                        <i class="ik ik-trending-up"></i>
                    </div>
                </div>
                <div class="progress mt-3 mb-1" style="height: 6px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
            </div>
        </div>
    </div>


    @*////////////////////////////*@

    <div class="row clearfix">
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Yazar Sözleri</h3>

                </div>
                <div class="card-body feeds-widget">
                    <div class="feed-item">
                        <a>
                            <div class="feeds-left"><i class="ik ik-thumbs-up text-primary"></i></div>
                            <div class="feeds-body">
                                <h4 class="title text-primary">Namık Kemal</h4>
                                <small>Zihin Fukara Olunca, Akıl Ukala Olurmuş.</small>
                            </div>
                        </a>
                    </div>
                    <div class="feed-item">
                        <a href="#">
                            <div class="feeds-left"><i class="ik ik-user text-success"></i></div>
                            <div class="feeds-body">
                                <h4 class="title text-success">Cemal Süreya</h4>
                                <small>Umut belki de gelecek sayfadadır.</small>
                            </div>
                        </a>
                    </div>
                    <div class="feed-item">
                        <a href="#">
                            <div class="feeds-left"><i class="ik ik-alert-circle text-warning"></i></div>
                            <div class="feeds-body">
                                <h4 class="title text-warning">Halide Edip Adıvar</h4>
                                <small>Sabırla sükûn daima birlikte gelmez.</small>
                            </div>
                        </a>
                    </div>
                    <div class="feed-item">
                        <a href="#">
                            <div class="feeds-left"><i class="ik ik-check-circle text-danger"></i></div>
                            <div class="feeds-body">
                                <h4 class="title text-danger">Ziya Gökalp</h4>
                                <small>Zemini mefkûre, seması hayal.</small>
                            </div>
                        </a>
                    </div>
                    <div class="feed-item">
                        <a href="#">
                            <div class="feeds-left"><i class="ik ik-minus text-purple"></i></div>
                            <div class="feeds-body">
                                <h4 class="title text-purple">Turgut Uyar</h4>
                                <small>Bir biz ikimiz varız güzel öbürleri hep çirkin.</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Günün Kitap Önerisi</h3>

                </div>
                <div class="card-body timeline">
                    <div class="header bg-theme" style="background-image: url('../img/placeholder/placeimg_400_200_nature.jpg')">
                        <div class="color-overlay d-flex align-items-center">
                            <div class="day-number">@DateTime.Now.Day.ToString()</div>
                            <div class="date-right">
                                <div class="day-name">@DateTime.Now.Month.ToString()</div>
                                <div class="month">@DateTime.Now.Year</div>
                            </div>
                        </div>
                    </div>
                    <ul>
                        <li>
                            <div class="bullet bg-pink"></div>
                            <div class="desc">
                                <h4>  Jack London - Beyaz Diş</h4>
                            </div>
                        </li>
                        <li>
                            <div class="bullet bg-green"></div>
                            <div class="desc">
                                <h4>Kurt Vonnegut - Kedi Beşiği</h4>
                            </div>
                        </li>
                        <li>
                            <div class="bullet bg-orange"></div>
                            <div class="desc">
                                <h4>Lois Lowry - Seçilmiş Kişi</h4>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="card" style="min-height: 412px;">
                <div class="card-header">
                    <h3>Başarının Anahtarı</h3>
                </div>
                <div class="card-body">
                    <ul class="task-list">
                        <li class="list">
                            <span></span>
                            <div class="task-details">
                                <p>Çalışmak</p>
                            </div>
                        </li>
                        <li class="list ">
                            <span></span>
                            <div class="task-details">
                                <p>Sabır Etmek</p>
                            </div>
                        </li>
                        <li class="list">
                            <span></span>
                            <div class="task-details">
                                <p>İnanmak</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    @*/////////////////////*@




    <div class="col-xl-3 col-md-6">
        <div class="card social-card">
            <div class="card-body text-center">
                <h2 class="text-facebook mb-20"><i class="fab fa-facebook-f"></i></h2>
                <h3 class="text-facebook fw-700">6,750</h3>
                <p>Beğeni</p>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card social-card">
            <div class="card-body text-center">
                <h2 class="text-twitter mb-20"><i class="fab fa-twitter"></i></h2>
                <h3 class="text-twitter fw-700">9,752</h3>
                <p>Tweets</p>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card social-card">
            <div class="card-body text-center">
                <h2 class="text-dribbble mb-20"><i class="fab fa-instagram"></i></h2>
                <h3 class="text-dribbble fw-700">8,752</h3>
                <p>Takipçi</p>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card social-card">
            <div class="card-body text-center">
                <h2 class="text-linkedin mb-20"><i class="fab fa-linkedin-in"></i></h2>
                <h3 class="text-linkedin fw-700">952</h3>
                <p>Takipçi</p>
            </div>
        </div>
    </div>






