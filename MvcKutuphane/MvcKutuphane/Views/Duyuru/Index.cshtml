@using MvcKutuphane.Models.Entity;
@model List<TBLDuyurular>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    //string renk = "";
}

<div style="text-align:center; background-color:#453f3f; width:400px;">
    <table class="table table-bordered" style="margin-top:15px;">
        <tr>
            <th style="text-align:center"><span style="color:white">DUYURULAR</span></th>
        </tr>
    </table>
</div>

<div style="margin-top:10px;">
    <table class="table table-bordered">
        <tr style="background-color:gray; color:white;">
            <th>ID</th>
            <th>KATEGORİ</th>
            <th>TARİH</th>
            <th>İÇERİK</th>
            <th>SİL</th>
        </tr>

        @foreach (var duyuru in Model)
        {
            //if (duyuru.KATEGORI == "Yeni Kitap")
            //{
            //    renk = "bg-info text-white";
            //}
            <tr style="background-color:darkgray;">
                <td>@duyuru.ID</td>
                @*<td class="@renk">@duyuru.KATEGORI</td>*@
                <td>@duyuru.KATEGORI</td>
                <td>@Convert.ToDateTime(duyuru.TARIH).ToString("dd/MM/yyyy")</td>
                <td><a href="/Duyuru/DuyuruDetay/@duyuru.ID" class="btn btn-info">DETAYLAR</a></td>
                <td><a href="/Duyuru/DuyuruSil/@duyuru.ID" class="btn btn-danger">SİL</a></td>
            </tr>
        }

    </table>
</div>
<a href="/Duyuru/DuyuruEkle" class="btn btn-primary">Yeni Duyuru Ekle</a>

