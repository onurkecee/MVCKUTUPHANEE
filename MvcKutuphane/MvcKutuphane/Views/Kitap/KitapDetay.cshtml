@model MvcKutuphane.Models.Entity.TBLKitap

@{
    ViewBag.Title = "KitapDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@Html.DisplayFor(x=>x.AD) Hakkında Bilgi</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <link href="~/webkitapdetay/assets/img/favicon.png" rel="icon">
    <link href="~/webkitapdetay/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="~/webkitapdetay/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/webkitapdetay/assets/vendor/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/webkitapdetay/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/webkitapdetay/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/webkitapdetay/assets/css/style.css" rel="stylesheet">
</head>
<body id="page-top">
    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about" class="about-mf sect-pt4 route">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box-shadow-full">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-5">
                                            <div class="about-img">
                                                <img src="~/webkitapdetay/image/kitap.jpg" class="img-fluid rounded b-shadow-a" alt="">
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-7">
                                            <div class="about-info">
                                                <p><span class="title-s">KİTAP ADI: </span> <span>@Html.DisplayFor(x => x.AD)</span></p>
                                                <p><span class="title-s">KATEGORİ: </span> <span>@Html.DisplayFor(x => x.TBLKategori.AD)</span></p>
                                                <p><span class="title-s">YAZAR: </span> <span>@Html.DisplayFor(x => x.TBLYazar.AD) @Html.DisplayFor(x => x.TBLYazar.SOYAD)</span></p>
                                                <p><span class="title-s">BASIM YILI: </span> <span>@Html.DisplayFor(x => x.BASIMYIL)</span></p>
                                                <p><span class="title-s">YAYINEVİ: </span> <span>@Html.DisplayFor(x => x.YAYINEVİ)</span></p>
                                                <p><span class="title-s">SAYFA: </span> <span>@Html.DisplayFor(x => x.SAYFA)</span></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="skill-mf">
                                        <p class="title-s">KİTAP İSTATİSTİK</p>
                                        <span>OKUNABİLİRLİK</span> <span class="pull-right">85%</span>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <span>AKICILIK</span> <span class="pull-right">75%</span>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <span>OLAY ÖRGÜSÜ</span> <span class="pull-right">50%</span>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <span>TAVSİYE</span> <span class="pull-right">90%</span>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="about-me pt-5 pt-md-0">
                                        <div class="title-box-2">
                                            <h5 class="title-left">
                                                @Html.DisplayFor(x=>x.AD) Hakkında Kısa Bilgi 
                                            </h5>
                                        </div>
                                        <p class="lead">
                                            @Html.DisplayFor(x => x.DETAY)
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
    <script src="~/webkitapdetay/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/webkitapdetay/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/counterup/jquery.counterup.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/typed.js/typed.min.js"></script>
    <script src="~/webkitapdetay/assets/vendor/venobox/venobox.min.js"></script>

    <script src="~/webkitapdetay/assets/js/main.js"></script>
</body>

</html>