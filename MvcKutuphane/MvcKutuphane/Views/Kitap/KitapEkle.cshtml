@model MvcKutuphane.Models.Entity.TBLKitap

@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.TBLKategori.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TBLKategori.ID, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Yazar</label>
        @Html.DropDownListFor(x => x.TBLYazar.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TBLYazar.ID, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BASIMYIL, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(x => x.YAYINEVİ, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.YAYINEVİ, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SAYFA, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <label>KISA ÖZET</label>
        @Html.TextAreaFor(x => x.DETAY, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.DETAY, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">KİTAP EKLE</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
</form>
