@using MvcKutuphane.Models.Entity;
@model List<TBLDuyurular>

@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<div style="text-align:center; background-color:#453f3f; width:400px;">
    <table class="table table-hover" style="margin-top:15px;">
        <tr>
            <th style="text-align:center"><span style="color:white">DUYURULAR</span></th>
        </tr>
    </table>
</div>

<div style="margin-top:10px;">
    <table class="table table-hover">
        <tr>
            <th>KATEGORİ</th>
            <th>TARİH</th>
            <th>İÇERİK</th>
        </tr>

        @foreach (var duyuru in Model)
        {
            <tr>
                <td>@duyuru.KATEGORI</td>
                <td>@Convert.ToDateTime(duyuru.TARIH).ToString("dd/MM/yyyy")</td>
                <td>@duyuru.ICERIK</td>
            </tr>
        }

    </table>
</div>

