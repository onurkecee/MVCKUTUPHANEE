@model MvcKutuphane.Models.Entity.TBLUyeler

@{
    ViewBag.Title = "UyeDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@Html.DisplayFor(x=>x.AD) @Html.DisplayFor(x => x.SOYAD) Üye Bilgileri</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <!-- Google Fonts -->
    @*<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">*@

    <!-- Vendor CSS Files -->
    <link href="~/webuyedetay/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/webuyedetay/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/webuyedetay/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/webuyedetay/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/webuyedetay/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/webuyedetay/assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/webuyedetay/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: Kelly - v2.0.0
    * Template URL: https://bootstrapmade.com/kelly-free-bootstrap-cv-resume-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>
    <main id="main">
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>@Html.DisplayFor(x => x.AD) @Html.DisplayFor(x => x.SOYAD)</h2>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <img src="~/webuyedetay/assets/user.png" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-8 pt-4 pt-lg-0 content" style="margin-top:50px;">
                        <h3>KÜTÜPHANE ÜYE KARTI</h3>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Uye Id:</strong> @Html.DisplayFor(x => x.ID)</li>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Ad Soyad:</strong> @Html.DisplayFor(x => x.AD) @Html.DisplayFor(x => x.SOYAD)</li>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Mail:</strong> @Html.DisplayFor(x => x.MAIL)</li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Telefon:</strong> @Html.DisplayFor(x => x.TELEFON)</li>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Kullanıcı Adı:</strong> @Html.DisplayFor(x => x.KULLANICIADI)</li>
                                    <li style="font-size:12px;"><i class="icofont-rounded-right"></i> <strong style="font-size:12px;">Okul:</strong> @Html.DisplayFor(x => x.OKUL)</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </section>
    </main>



    <!-- Vendor JS Files -->
    <script src="~/webuyedetay/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/webuyedetay/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/counterup/counterup.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/webuyedetay/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/webuyedetay/assets/js/main.js"></script>

</body>

</html>
