@model MvcKutuphane.Models.Entity.TBLUyeler

@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <div class="form-group" style="margin-top:15px;">
        <div style="margin-top:15px;">
            @Html.LabelFor(x => x.ID)
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px;">
            <label>Üye Adı</label>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Üye Soyadı</label>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Mail</label>
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MAIL, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Kullanıcı Adı</label>
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KULLANICIADI, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Şifre</label>
            @Html.TextBoxFor(x => x.SİFRE, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SİFRE, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Fotoğraf</label>
            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px;">
            <label>Telefon</label>
            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.TELEFON, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px;">
            <label>Okul</label>
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OKUL, "", new { @style = "color:red" })
        </div>
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

